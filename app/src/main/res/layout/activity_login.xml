<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.deyvi.loterama.Login">

   <Button
       android:id="@+id/btnModerador"
       android:background="@color/colorAccent"
       android:layout_centerHorizontal="true"
       android:layout_centerVertical="true"
       android:text="@string/moderador"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="15dp"
       android:onClick="moderador"/>
    <Button

        android:background="@color/colorAccent"
        android:text="@string/jugador"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="jugador"
        android:layout_below="@+id/btnModerador"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />


</RelativeLayout>
